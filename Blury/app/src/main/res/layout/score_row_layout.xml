<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_score_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#BBBDBF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        tools:text="1"
        android:padding="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_avatar_score"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/marcelino"
        app:civ_border_width="2dp"
        app:civ_border_color="#9E9495"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/text_score_position"/>

    <TextView
        android:id="@+id/text_name_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marcelino Yax"
        android:layout_toRightOf="@+id/image_avatar_score"
        android:layout_toLeftOf="@+id/text_score"
        android:layout_centerVertical="true"
        android:padding="6dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100 pts"
        android:layout_alignParentEnd="true"
        android:padding="6dp"
        android:layout_marginLeft="6dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbbbbb"
        android:layout_toEndOf="@+id/text_score_position"
        android:layout_below="@+id/image_avatar_score"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
