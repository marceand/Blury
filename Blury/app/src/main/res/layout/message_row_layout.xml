<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_avatar_message"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/marcelino"
        app:civ_border_width="2dp"
        app:civ_border_color="#9E9495"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/text_name_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marcelino"
        android:layout_toRightOf="@+id/image_avatar_message"
        android:layout_toLeftOf="@+id/text_date_message"
        android:padding="2dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_message_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hello there! have you seen the rain"
        android:layout_toRightOf="@+id/image_avatar_message"
        android:layout_toLeftOf="@+id/text_date_message"
        android:layout_below="@+id/text_name_message"
        android:padding="2dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text_date_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1 hour ago"
        android:layout_alignParentEnd="true"
        android:padding="6dp"
        android:layout_marginLeft="6dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text_count_message"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:text="1"
        android:background="@drawable/circle_bg"
        android:layout_alignParentEnd="true"
        android:padding="6dp"
        android:layout_marginLeft="6dp"
        android:textSize="8sp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_below="@+id/text_date_message"/>
</RelativeLayout>
