<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_margin="16dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_avatar_feed"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/marcelino"
        app:civ_border_width="2dp"
        app:civ_border_color="#9E9495"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/text_message_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Kirsten Ready for the weeekend!"
        android:layout_toRightOf="@+id/image_avatar_feed"
        android:layout_toLeftOf="@+id/text_date_feed"
        android:layout_centerVertical="true"
        android:padding="6dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_date_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1 hour ago"
        android:layout_alignParentEnd="true"
        android:padding="6dp"
        android:layout_marginLeft="6dp"
        android:layout_centerVertical="true"
        android:textSize="12sp"/>

</RelativeLayout>
